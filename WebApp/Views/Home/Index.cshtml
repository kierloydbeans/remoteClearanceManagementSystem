@{
    ViewData["Title"] = "Welcome to My System";
}

<style>
    body {
        background: linear-gradient(135deg, #4e54c8 0%, #8f94fb 100%);
        min-height: 100vh;
        margin: 0;
        font-family: 'Segoe UI', Arial, sans-serif;
    }
    .front-page-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 80vh;
        color: #fff;
    }
    .logo-circle {
        width: 120px;
        height: 120px;
        background: rgba(255,255,255,0.15);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 32px;
        box-shadow: 0 4px 24px rgba(0,0,0,0.1);
    }
    .logo-circle span {
        font-size: 3rem;
        font-weight: bold;
        color: #fff;
        letter-spacing: 2px;
    }
    .main-title {
        font-size: 2.8rem;
        font-weight: 700;
        margin-bottom: 12px;
        letter-spacing: 1px;
    }
    .subtitle {
        font-size: 1.3rem;
        margin-bottom: 32px;
        opacity: 0.9;
    }
    .cta-btn {
        background: #fff;
        color: #4e54c8;
        border: none;
        padding: 14px 36px;
        border-radius: 30px;
        font-size: 1.1rem;
        font-weight: 600;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        cursor: pointer;
        transition: background 0.2s, color 0.2s;
        text-decoration: none;
        margin-right: 12px;
    }
    .cta-btn:last-child {
        margin-right: 0;
    }
    .cta-btn:hover {
        background: #4e54c8;
        color: #fff;
    }
    .cta-btn-group {
        display: flex;
        gap: 12px;
    }
</style>

<div class="front-page-container">
    <div class="logo-circle">
        <span>OCA</span>
    </div>
    <div class="main-title">Online Clearance Application</div>
    <div class="subtitle">
        Your all-in-one platform for managing tasks, tracking progress, and collaborating efficiently.
    </div>
    <div class="cta-btn-group">
        <a class="cta-btn" href="/Account/Login">Login</a>
        <a class="cta-btn" href="/Account/Register">Register</a>
        <a class="cta-btn" href="/Admin/Login">Admin Login</a>
    </div>
</div>
